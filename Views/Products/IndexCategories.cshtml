<script language="javascript" type="text/javascript">

         var app = new Vue({
            el: '#app',

             data: {
                 productsList: [],
                 categoriesList: [],
                 reviewsList: [],
                 countProduct: '',
                categories: '',
                categoriesname: '',
                 productsId: '',
                 searchString: '' ,
                 searchValue: '',
                 myRange: '',
                 myCategorie: '',
                 cart:[],
            },


            mounted: function () {

                 let products  = '@Html.Raw(Json.Serialize(Model.ProductIndexViewModel.ToList()))';
                this.productsList = JSON.parse(products);

                let categories  = '@Html.Raw(Json.Serialize(Model.CategoriesIndexViewModel.ToList()))';
                this.categoriesList = JSON.parse(categories);

                let  reviews = '@Html.Raw(Json.Serialize(Model.ReviewIndexViewModel.ToList()))';
                this.reviewsList = JSON.parse(reviews);





             },
             computed: {
                 filterProduct: function () {
                     let productsList_array = this.productsList;
                     let  search = this.searchString;
                     //by categorie
                     if (this.myCategorie != '' && this.myCategorie) {
                         productsList_array = productsList_array.filter((item) => {
                             return (item.categoryID == this.myCategorie)

                         })
                     }


                     if (search == '0') {
                         return productsList_array;
                     }

                     if (search == '1') {

                         return productsList_array.slice().reverse();

                     }
                     if (search == '4') {
                         return productsList_array;
                     }
                     //by name
                     productsList_array = productsList_array.sort((a, b) => {
                         if (search == '2') {
                             let fa = a.name.toLowerCase(), fb = b.name.toLowerCase()

                             if (fa < fb) {
                                 return -1;
                             }
                             if (fa > fb) {
                                 return 1;
                             }
                             return 0;


                         } else if (search == '3') {

                             return a.price_sell - b.price_sell
                         }
                     })
                     //search
                     if (this.searchValue != '' && this.searchValue) {
                         productsList_array = productsList_array.filter((item) => {
                             return item.name
                                 .toUpperCase()
                                 .includes(this.searchValue.toUpperCase())
                         })
                     }
                     //filter by price
                     if (this.myRange) {
                         productsList_array = productsList_array.filter((item) => {
                             return (item.price_sell <= this.myRange)
                         })
                     }

                     return productsList_array;
                 }


             },
             methods: {
                 addToCart: function (product) {
                     for (let i = 0; i < this.cart.length; i++) {
                         if (this.cart[i].item.id === product.id) {
                             this.cart[i].quantity++;
                             return;

                         }
                     }
                     this.cart.push({
                         item: product,
                         quantity: 1
                     });
 
                 }
             }
         });



</script>



